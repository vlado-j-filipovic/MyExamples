@page "/basic-operations"

<PageTitle>Basic operations</PageTitle>


<h1 class="display-1">Basic operations</h1>

<div class="row">
    <div class="column">
        <label for="argument1">First one:</label>
        <input type="text" class="form-control" id="argument1" placeholder="Enter first argument" @bind="arg1">
    </div>
    <div class="column">
        <label for="argument2">Second one:</label>
        <input type="text" class="form-control" id="argument2" placeholder="Enter second argument" @bind="arg2">
    </div>
</div>
<div class="row">
    <div class="d-flex justify-content-center">
        <button class="btn btn-primary mx-2 my-2" @onclick="DoTheAddition">+</button>
        <button class="btn btn-danger mx-2 my-2">-</button>
        <button class="btn btn-info mx-2 my-2">*</button>
        <button class="btn btn-warning mx-2 my-2">/</button>
    </div>
</div>
<div class="row">
    <div class="column">
        <label for="result">Result:</label>
        <input type="text" class="form-control" id="result" placeholder="Result" @bind="result">
    </div>
</div>

@code
{
    double arg1;
    double arg2;
    double result;

    void DoTheAddition()
    {
        result = arg1 + arg2;
    }
}