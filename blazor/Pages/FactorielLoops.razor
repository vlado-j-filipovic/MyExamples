@page "/factoriel"

<PageTitle>Factoriel</PageTitle>
<h1 class="display-2">Factoriel</h1>

<div class="row my-1">
    <div class="col">
        <input type="number" class="form-control" @bind="n"/>
    </div>
    <div class="col">
        <button class="btn btn-primary" @onclick="FactorielWhile">Factoriel</button>
    </div>
    <div class="col">
        Result: 
   </div>
    <div class="col">
        <b> @result </b>
    </div>
</div>
<div class="row my-1">
    <div class="col">
        <input type="number" class="form-control" @bind="n2"/>
    </div>
    <div class="col">
        <button class="btn btn-warning" @onclick="FactorielWhileDown">Factoriel</button>
    </div>
    <div class="col">
        Result: 
   </div>
    <div class="col">
        <b> @result2 </b>
    </div>
</div>
<div class="row my-1">
    <div class="col">
        <input type="number" class="form-control" @bind="n3"/>
    </div>
    <div class="col">
        <button class="btn btn-danger" @onclick="FactorielDoWhile">Factoriel</button>
    </div>
    <div class="col">
        Result: 
   </div>
    <div class="col">
        <b> @result3 </b>
    </div>
</div>
<div class="row my-1">
    <div class="col">
        <input type="number" class="form-control" @bind="n4"/>
    </div>
    <div class="col">
        <button class="btn btn-info" @onclick="FactorielDoWhileDown">Factoriel</button>
    </div>
    <div class="col">
        Result: 
   </div>
    <div class="col">
        <b> @result4 </b>
    </div>
</div>
<div class="row my-1">
    <div class="col">
        <input type="number" class="form-control" @bind="n5"/>
    </div>
    <div class="col">
        <button class="btn btn-secondary" @onclick="FactorielFor">Factoriel</button>
    </div>
    <div class="col">
        Result: 
   </div>
    <div class="col">
        <b> @result5 </b>
    </div>
</div>
<div class="row my-1">
    <div class="col">
        <input type="number" class="form-control" @bind="n6"/>
    </div>
    <div class="col">
        <button class="btn btn-success" @onclick="FactorielForDown">Factoriel</button>
    </div>
    <div class="col">
        Result: 
   </div>
    <div class="col">
        <b> @result6 </b>
    </div>
</div>

@code
{
    uint n = 1;
    ulong result = 1;

    void FactorielWhile()
    {
        result = 1;
        uint counter = 1;    
        while( counter <= n)
        {
            // Exactly one shoud be selected among 3
            // 1) equivalent longer alternative
            // result = result * counter;
            //counter = counter + 1;
            // 2) equivalent shorter alternative
            // result *= counter;
            // counter += 1;
            // 3) equivalent the shortest
            result *= counter;
            counter++;
        }
    }

    uint n2 = 1;
    ulong result2 = 1;

    void FactorielWhileDown()
    {
        result2 = 1;
        uint counter = n2;    
        while(counter >= 1)
        {
            result2 *= counter;
            counter--;
        }
    }

    uint n3 = 1;
    ulong result3 = 1;

    void FactorielDoWhile()
    {
        result3 = 1;
        uint counter = 1;
        do
        {
            result3 *= counter;
            counter++;
        } while( counter <= n3 );    
    }

    uint n4 = 1;
    ulong result4 = 1;

    void FactorielDoWhileDown()
    {
        result4 = 1;
        uint counter = n4;
        do
        {
            result4 *= counter;
            counter--;
        } while( counter >= 1 );    
    }

    uint n5 = 1;
    ulong result5 = 1;

    void FactorielFor()
    {
        result5 = 1;
        for(uint counter = 1; counter <= n5 ; counter++)
        {
            result5 *= counter;
            //Console.Write(counter + " " + result5 + "|");
        }
    }

    uint n6 = 1;
    ulong result6 = 1;

    void FactorielForDown()
    {
        result6 = 1;
        for(uint counter = n6; counter >= 1 ; counter--)
        {
            result6 *= counter;
        }
    }

}

